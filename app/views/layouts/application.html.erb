<!DOCTYPE html>
<html>
<head>
  <title>My Bloc Project</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>

  <!-- Navigation Bar -->
  <!-- <nav class="navbar navbar-toggleable-sm navbar-inverse bg-inverse"> -->
  <!-- <nav class="navbar navbar-inverse navbar-toggleable-md bg-inverse"> -->
    <nav class="navbar navbar-inverse navbar-toggleable-md bg-inverse">
    <div class="container">

      <%= link_to "My Bloc Project", root_path, class: "navbar-brand" %>
        <ul class="list-inline">

        <li class="nav-item"><%= link_to "Home", root_path, class: "nav-link" %></li>
        <li class="nav-item"><%= link_to "About", about_path, class: "nav-link" %></li>
        <li class="nav-item"><%= link_to "Contact", "#", class: "nav-link" %></li>
        <!-- logging out  -->
        <% if user_signed_in? %>
        <li class="nav-item"><%= link_to "Sign Out", signout_path, method: :delete, class: "nav-link" %></li>
        <% else %>

        <li class="nav-item"><%= link_to "Sign Up", signup_path, class: "nav-link btn btn-primary" %></li>
        <li class="nav-item"><%= link_to "Sign In", signin_path, class: "nav-link btn btn-primary" %></li>
        <% end %>

      </ul>

    </div>
  </nav>

  <!-- Flash Messages -->
  <% flash.each do |name, message| %>
  <%= content_tag(:div, message, class:"alert alert-info #{name}") %>
  <% end %>


  <!-- Page Content -->
  <%= yield %>

  <!-- Footer -->
  <footer class="small text-muted">
    <div class="container">
      <hr>
      <center>
        <p>bloc</p>
      </center>
    </div>
  </footer>

</body>
</html>
